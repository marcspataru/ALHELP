extends header
block content
    if error
        .error
            p= error
    if courses
        .container
            #cards
                for course in courses
                    .card.w-50
                        .card-body
                            h5.card-title= course.name
                            p= `Lessons completed: ${course.completion}/${course.numberOfLessons}`
                            -course.name = course.name.toLowerCase()
                            -course.name.replace(/\s/g, '')
                            if(course.completed === false)
                                a(href=`courses/${course.name}`) Learn
                            else 
                                p Course completed! Congratulations!
    else 
        .container
            div(class='alert alert-danger m-5' role='alert') Please complete the Learning Preferences tab before starting the courses!