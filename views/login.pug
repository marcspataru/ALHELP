extends layout

block content
    -data = data || {}
    if errors
        ul.my-errors
            for error in errors
                li= error
    if errorsV
        ul.my-errors
            for error in errorsV
                li= error.msg
    form(action="." method="POST" class="form-registration")
        h1 ALHENS
        label(for="name") Name:
        input(
            type="text"
            id="name"
            name="name"
            class="form-control"
            value=data.name
        )

        label(for="password") Password:
        input(
            type="password"
            id="password"
            name="password"
            class="form-control"
            value=data.password
        )

        input(type="submit" value="Login" class="btn btn-lg btn-primary btn-block")
        p Don't have an account yet? Register #[a(href="/register") here]